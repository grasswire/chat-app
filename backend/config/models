User json sql=taplike_users
  twitterUserId Int64
  twitterScreenName Text
  profileImageUrl Text
  emailAddress Text Maybe
  UniqueUser twitterUserId
  deriving Eq Show Typeable

Channel json
  title Text
  topic Text
  crSlug ChannelSlug
  UniqueTitle title
  UniqueChannelSlug crSlug
  created UTCTime
  creator UserId
  color Text sqltype=char(6) default='3774bd'
  deriving Eq Show Typeable

Message
  user UserId
  text Text
  timestamp UTCTime
  channel ChannelId
  uuid MessageUUID default=uuid_generate_v4()
  UniqueMessageUUID uuid
  deriving Eq Show Typeable

Heartbeat
  user UserId
  lastSeen UTCTime
  channel ChannelId
  UniqueUC user channel

MessageLike 
  message MessageUUID
  user UserId
  channel ChannelSlug
  timestamp UTCTime
  UniqueUM user message 
  deriving Eq Show Typeable
  
Membership
  user UserId 
  channel ChannelId 
  joinDate UTCTime
  inChannel Bool default=True
  UniqueMemberUC user channel 
  deriving Eq Show Typeable
 -- By default this file is used in Model.hs (which is imported by Foundation.hs)
